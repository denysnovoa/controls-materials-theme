<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="mapMarkerStyle" />

    <declare-styleable name="MapMarker" parent="MaterialTextView">
        <attr name="shapeAppearance" format="reference" />
        <attr name="shapeAppearanceOverlay" format="reference" />

        <attr name="markerPointSize" format="dimension" />
        <attr name="markerRippleColor" format="color" />
        <attr name="markerFillColor" format="color" />
        <attr name="markerStrokeColor" format="color" />
    </declare-styleable>

    <declare-styleable name="Badge">
        <attr name="badgeIcon" format="reference" />
        <attr name="badgeIconTint" format="reference|color" />
        <attr name="android:layout_height" format="dimension" />
    </declare-styleable>

    <style name="MapMarker.Favorite"
        parent="MapMarker">
        <item name="android:drawableLeft">@drawable/ic_heart_fav</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="drawableTint">?colorOnError</item>
        <item name="android:textColor">?colorOnError</item>
        <item name="markerFillColor">?colorError</item>
    </style>
</resources>